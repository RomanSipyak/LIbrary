<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-xs-6'>
            <div class='row' style='margin-left: 10px '>
              <%= form_tag admin_authors_path, method: :get do %>
                <div class='row' >
                  <div class='col-md-12'>
                    <%= text_field_tag 'by_name', params[:by_name],
                                       placeholder: 'ім\'я автора',
                                       class: 'form-control col-md-6',
                                       style: 'width: 220px' %>
                  </div>
                </div>
                <div class='row' style='margin-top: 5px'>
                  <div class='col-md-9'>
                    <div><%= submit_tag 'Пошук', class: 'btn btn-ms btn-success ', style: 'margin-left: 5px;' %></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class='col col-xs-6 text-right'>
            <%= link_to 'Створити автора', new_admin_author_path, class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
      <div class='panel-body table-responsive'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
            <tr>
              <h4><%= @status %></h4>
            </tr>
            <tr>
              <th><em class='fa fa-cog'></em></th>
              <th class='hidden-xs'>ID</th>
              <th>Name</th>
              <th>Biography</th>
            </tr>
          </thead>
          <tbody>
            <% @authors.each do |author| %>
              <tr>
                <td align='center'>
                  <%= link_to new_admin_author_path(author_id: author.id), class: ' btn btn-default fa fa-pencil' do %>
                  <% end %>
                  <%= link_to admin_author_path(author), method: :delete, data: {confirm: 'Are you sure?'}, class: ' btn btn-danger fa fa-trash' do %>
                  <% end %>
                </td>
                <td class='hidden-xs'><%= author.id %></td>
                <td><%= link_to author.name, admin_author_path(author.id) %></td>
                <% if author.biography.length < 30 %>
                  <td>Author:  <%= author.biography %></td><br>
                <% else %>
                  <td>Author:  <%= author.biography[0..30] + '...' %></td><br>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-6 col-md-offset-4">
            <% unless @authors.empty? %>
              <%= paginate @authors, outer_window: 3, class: "pagination" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
