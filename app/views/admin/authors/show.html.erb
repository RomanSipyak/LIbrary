<div class='row'>
  <div class='col-md-12 about ' style='background-color:#e0b575e0; border-radius: 7px; padding: 5px;border: solid; border-width: 3px;'>
    <div class='row about'>
      <div class='col-lg-6 col-md-6 col-sm-12 '>
        <div class='row'>
          <div class='col-md-12' style="margin-bottom: 5px">
            <%= image_tag @author.image_url, class: "img-responsive" if @author.image_url %>
          </div>
        </div>
      </div>
      <div class='col-lg-6 col-md-6 col-sm-12 desc card'>
        <ul>
          <li>Author Name:<%= @author.name %></li>
        </ul>
      </div>
    </div>
    <div class='row' style='background-color: #fcaf58a6; border-radius: 7px; margin: 8px; padding: 5px; border: dashed; border-width: 7px;'>
      <p style='word-break: break-all;'><%= @author.biography %></p>
    </div>
  </div>
</div>

<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row' style='margin-top: 10px;'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 col-md-offset-3'>
            <div style='text-align: center'>
              <strong>
                All author's books in this library
              </strong>
            </div>
          </div>
        </div>
      </div>

      <div class='panel-body table-responsive'>
        <table class='table table-striped table-bordered table-hover table-list'>
          <thead>
          <tr>
            <th>Title</th>
            <th>Year of release</th>
            <th>Category</th>
            <th>Author</th>
            <th>Rating:</th>
            <th>Description</th>
          </tr>
          </thead>
          <tbody>
          <% @author.books.each do |book| %>
            <tr>
              <td><%= link_to book.title, for_user_book_path(book.id) %></td>
              <td><%= link_to book.year, for_user_book_path(book.id) %></td>
              <td><%= link_to book.category.title, for_user_book_path(book.id) %></td>
              <td><%= link_to book.author.name, for_user_book_path(book.id) %></td>
              <td><%= book.rating %></td>
              <td><%= book.description[0..30] + '...' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>