<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <% if @author.errors.any? %>
      <div class='error_explanation'>
        <h4><%= pluralize(@author.errors.count, 'error') %></h4>
        <ul>
          <% @author.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h4><%= @status %></h4>
    <%= form_for [:admin, @author] do |f| %>
      <div class='form-group'>
        <label for='usr'>Author name</label>
        <%= f.text_field :name, class: 'form-control', style: 'background-color: #44312e73' %><br>
        <label for='usr'>Author biography</label>
        <%= f.text_area :biography, class: 'form-control', style: 'background-color: #44312e73' %><br>
        <%= f.hidden_field :image, value: @author.cached_image_data %>
        <%= f.file_field :image %>
      </div>
      <%= f.submit 'Save', class: 'form-control', style: 'font-size: 18px;
                                                          color: #040202ed;
                                                          background-color: #5a3113cc;
                                                          border: 0px solid #ccc;
                                                          border-radius: 10px;' %>
    <% end %>
  </div>
</div>