<div class='row'>
  <div class='col-md-12 about ' style='background-color:#e0b575e0; border-radius: 7px; padding: 5px;border: solid; border-width: 3px;'>
    <div class='row about'>
      <div class="col-md-12">
        <div class='row '>
          <div class='col-md-12 '>
            <div class='row'>
              <div class='col-md-12'>
                <%= image_tag @book.image_url, class: "img-responsive" if @book.image_url %>
              </div>
            </div>
          </div>
        </div>
        <div class='row '>
          <div class='col-md-12  desc card'>
            <ul>
<!--              <li>Title:<%#= @book.title %></li>-->
<!--              <li>Year of release:<%#= @book.year %></li>-->
              <li>Назва:<%= @book.title %></li>
              <li>Рік випуску:<%= @book.year %></li>
              <% unless @book.author.nil? || @book.author.name.nil? %>
<!--                <li>Author:<%#= @book.author.name %></li>-->
                <li>Автор:<%= @book.author.name %></li>
              <% else %>
<!--                <li>Author: not exist</li><br>-->
                <li>Автор: не існує</li><br>
              <% end %>
<!--              <li>Rating:  <%#= @book.rating %></li>-->
              <li>Рейтинг:  <%= @book.rating %></li>
              <% unless @book.category.nil? || @book.category.title.nil? %>
<!--                <li>Category:<%#= @book.category.title %></li>-->
                <li>Категорія:<%= @book.category.title %></li>
              <% else %>
<!--                <li>Category: not exist</li><br>-->
                <li>Категоря: не існує</li><br>
              <% end %>
              <% unless @book.language.nil? || @book.language.language.nil? %>
<!--                <li>Language:<%#= @book.language.language %></li>-->
                <li>Мова:<%= @book.language.language %></li>
              <% else %>
<!--                <li>Language: not exist</li><br>-->
                <li>Мова: не існує</li><br>
              <% end %>
<!--              <li>Count of copies:<%#= @book.units_count %></li>-->
<!--              <li>Count of free: ДОРОБИТИ</li>-->
<!--              <li>Count of ordes: ДОРОБИТИ</li>-->
              <li>Кількість копій :<%= @book.units_count %></li>
              <li>Кількість вільних: <%= @free_units_count %></li>
              <li>Кількість зайнятих: <%= @taken_units_count %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class='row' style='background-color: #fcaf58a6; border-radius: 7px; margin: 8px; padding: 5px; border: groove; border-width: 7px;'>
      <p style='word-break: break-all;'><%= @book.description %></p>
    </div>
  </div>
</div>

<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row' style='margin-top: 10px;'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 col-md-offset-3'>
            <div style='text-align: center'>
<!--              <strong>-->
<!--                All unit for this books-->
<!--              </strong>-->
              <strong>
                Всі копії даної книги
              </strong>
            </div>
          </div>
        </div>
      </div>
      <% if current_user.admin %>
        <div class='panel-body table-responsive'>
          <table class='table table-striped table-bordered table-list'>
            <thead>
              <tr>
                <th><em class='fa fa-cog'></em></th>
                <th class='hidden-xs'>ID</th>
<!--                <th class='hidden-xs'>Available</th>-->
<!--                <th class='hidden-xs'>Owner</th>-->
                <th class='hidden-xs'>Наявність</th>
                <th class='hidden-xs'>Взята користувачем</th>
              </tr>
            </thead>
            <tbody>
              <% @units.each do |unit| %>
                <tr>
                  <td align='center'>
                    <%= link_to admin_book_unit_path(id: unit.id, book_id: @book.id), method: :delete, data: {confirm: 'Are you sure?'}, class: ' btn btn-danger fa fa-minus-circle' do %>
                    <% end %>
                  </td>
                  <td><%= unit.id %></td>
                  <td><%= unit.available %></td>
                  <% if unit.available %>
                    <td>Not have owner</td>
                  <% else %>
                    <td><%= @units_owner_name[unit] %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>