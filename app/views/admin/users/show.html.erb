<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
    <div class='panel panel-info'>
      <div class='panel-heading'>
        <h3 class='panel-title'>
          Статистика користувача
        </h3>
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-md-3 col-lg-3 ' align='center'>
            <img alt='User Pic' src='http://localhost:3000/assets/book-shelves-book-stack-bookcase-207662.jpg' class='img-rounded img-responsive'>
          </div>
          <div class='table-responsive'>
            <table class='table'>
              <tbody>
                <tr>
                  <td>Username:</td>
                  <td><%= @user.username %></td>
                </tr>
                <tr>
                  <td>Email:</td>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <td>Count of orders:</td>
                  <td><%= @bookings.count %></td>
                </tr>
                <tr>
                  <td>Debtor</td>
                  <td><%= @user.debtor %></td>
                </tr>
              </tbody>
            </table>
            <% if current_user.admin %>
              <% if @user.admin %>
                <%= form_with url: admin_user_path, method: :patch do |form| %>
                  <%= hidden_field_tag(:user_id, @user.id) %>
                  <%= hidden_field_tag(:admin, false) %>
                  <%#= form.submit 'Change on simple for_user', class: ' btn btn-sm btn-info ' %>
                  <%= form.submit 'Змінити на простого користувача', class: ' btn btn-sm btn-info ' %>
                <% end %>
              <% else %>
                <%= form_with url:  admin_user_path, method: :patch do |form| %>
                  <%= hidden_field_tag(:user_id, @user.id) %>
                  <%= hidden_field_tag(:admin, true) %>
                  <%= form.submit 'Змінити на адміністратора', class: 'btn btn-xs btn-success ' %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <!--            <div class='panel-footer'>
                    <a data-original-title='Broadcast Message' data-toggle='tooltip' type='button' class='btn btn-sm btn-primary'><i class='glyphicon glyphicon-envelope'></i></a>
                    <span class='pull-right'>
                      <a href='edit.html' data-original-title='Edit this for_user' data-toggle='tooltip' type='button' class='btn btn-sm btn-warning'><i class='glyphicon glyphicon-edit'></i></a>
                      <a data-original-title='Remove this for_user' data-toggle='tooltip' type='button' class='btn btn-sm btn-danger'><i class='glyphicon glyphicon-remove'></i></a>
                    </span>
               </div>-->
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 text-right col-md-offset-3'>
            <div style='text-align: center'>
<!--              <strong>Your all bookings</strong>-->
              <strong>Всі замовлення користувача</strong>
            </div>
          </div>
        </div>
      </div>
      <div class='panel-body table-responsive'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
            <tr>
<!--              <th class='hidden-xs'>ID</th>-->
<!--              <th class='hidden-xs'>Copy ID</th>-->
<!--              <th>Start Booking</th>-->
<!--              <th>End Booking</th>-->
<!--              <th>Status</th>-->
<!--              <th>User Name</th>-->
<!--              <th>Book Name</th>-->
<!--              <th>Author book</th>-->
              <th class='hidden-xs'>ID</th>
              <th class='hidden-xs'>Копія ID</th>
              <th>Покаток замовлення</th>
              <th>Кінець замовлення</th>
              <th>Статус замовлення</th>
              <th>Код</th>
              <th>Ім'я замовника</th>
              <th>Назва книги</th>
              <th>Ім'я автора</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <% if @books_booking[booking] %>
                  <td><%= link_to booking.id, for_user_book_path(@books_booking[booking].id) %></td>
                  <td><%= link_to booking.unit_id, for_user_book_path(@books_booking[booking].id) %></td>
                  <td><%= link_to booking.start_booking, for_user_book_path(@books_booking[booking].id) %></td>
                  <td><%= link_to booking.end_booking, for_user_book_path(@books_booking[booking].id) %></td>
                  <td><%= link_to booking.status, for_user_book_path(@books_booking[booking].id) %></td>
                <% else %>
                  <td><%= booking.id %></td>
                  <td><%= booking.unit_id %></td>
                  <td><%= booking.start_booking %></td>
                  <td><%= booking.end_booking %></td>
                  <td><%= booking.status %></td>
                <% end %>
                <td><%= booking.code %></td>
                <td><%= booking.user.username %></td>
                <td><%= booking.book_title %></td>
                <td><%= booking.author_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



