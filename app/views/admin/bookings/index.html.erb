<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-xs-6  '>
            <div class='row' style='margin-left: 10px '>
              <%= form_tag admin_bookings_path, method: :get do %>
                <%#= form_with url: bookings_path, method: :get do |form| %>
                <div class='row' >
                  <div class='col-md-12'>
                    <%= text_field_tag 'by_book_title_or_author_name_or_code', params[:by_book_title_or_author_name_or_code],
                                       placeholder: 'code\name_title\name_author',
                                       class: 'form-control col-md-6',
                                       style: 'width: 220px' %>
                  </div>
                </div>
                <div class='row' style='margin-top: 5px'>
                  <div class='col-md-3'>
                    <%= select_tag :by_status, options_for_select(Booking.statuses.map {|k, v| [k.humanize.capitalize, v]}) %>
                  </div>
                  <div class='col-md-9'>
                    <div><%= submit_tag 'Search', class: 'btn btn-ms btn-success ', style: 'margin-left: 5px;' %></div>
                  </div>
                </div>
                <%#= form.submit 'Search', class: 'btn btn-ms btn-success ', style: 'margin-left: 5px;' %>
              <% end %>
            </div>
          </div>
          <div class='col col-xs-3 offset-xs-6 '>
            <%= link_to 'Update Booking Statuses', admin_update_bookings_statuses_path, method: :post, class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
      <div class='panel-body table-responsive'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
            <tr>
              <h1><%= @status %></h1>
            </tr>
            <tr>
              <th><em class='fa fa-cog'></em></th>
              <th class='hidden-xs'>ID</th>
              <th class='hidden-xs'>Copy ID</th>
              <th>Start Booking</th>
              <th>End Booking</th>
              <th>Status</th>
              <th>Code</th>
              <th>User Name</th>
              <th>Book Name</th>
              <th>Author book</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <td align='center'>
                  <%= link_to new_admin_booking_path(booking_id: booking.id), class: ' btn btn-warning fa fa-pencil' do %>
                  <% end %>
                  <%= link_to admin_booking_path(booking), method: :delete, data: {confirm: 'Are you sure?'}, class: ' btn btn-danger fa fa-trash ' do %>
                  <% end %>
                  <%#= link_to update_bookings_status_on_taken_path(booking_id: booking.id), method: :past, class: ' btn btn-info fa fa-spinner ' do %>
                  <%= form_with url: admin_update_booking_status_path do |form| %>
                    <%= hidden_field_tag(:booking_id, booking.id) %>
                    <%= hidden_field_tag(:status, :taken) %>
                    <%= form.submit 'Change Taken', class: ' btn btn-sm btn-info ' %>
                  <% end %>
                  <%= form_with url: admin_update_booking_status_path do |form| %>
                    <%= hidden_field_tag(:booking_id, booking.id) %>
                    <%= hidden_field_tag(:status, :returned) %>
                    <%= form.submit 'Change Returned', class: 'btn btn-xs btn-success ' %>
                  <% end %>
                  <%# end %>
                  <%#= link_to update_bookings_status_on_returned_path(booking_id: booking.id), method: :post, class: ' btn btn-success fa fa-check-square ' do %>
                  <%# end %>
                </td>
                <td><%= link_to booking.id, new_admin_booking_path(booking_id: booking.id) %></td>
                <% if booking.unit %>
                  <td><%= link_to booking.unit_id, admin_book_path(booking.unit.book.id) %></td>
                <% else %>
                  <td> Copy not exist</td>
                <% end %>
                <td><%= booking.start_booking %></td>
                <td><%= link_to booking.end_booking, new_admin_booking_path(booking_id: booking.id) %></td>
                <td><%= link_to booking.status, new_admin_booking_path(booking_id: booking.id) %></td>
                <td><%= link_to booking.code, new_admin_booking_path(booking_id: booking.id) %></td>
                <td><%= booking.user.username %></td>
                <td><%= booking.book_title %></td>
                <td><%= booking.author_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <% unless @bookings.empty? %>
              <%= paginate @bookings, outer_window: 3, class: "pagination" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>