<div class='container-fluid cards-row'>
  <div class='row'>
    <% @authors.each do |author| %>
      <div class='col-sm-6 col-md-4 article'>
        <div class='thumbnail' style='outline-style: solid; outline-radius: 7px; background-color: #ddaa68e6;'>
          <img src='https://1.bp.blogspot.com/-aFQ-W_KTFWQ/V6BdtpSUy6I/AAAAAAAAAH4/xD_U-BYItSsNvk1UGfROqLBzzU1h32oXQCLcB/s320/4-diwali-greeting-cards-by-ajay-acharya.jpg' alt='Bootstrap Thumbnail: Beautiful Bootstrap Thumbnail like Material Design Cards'>
          <div class='caption'>
            <h3>Author Name:  <td><%= link_to author.name, user_author_path(author.id) %></td></h3>
            <p class='card-description'>
              <strong>Author:  <%= author.biography[0..15] + '...' %></strong><br>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

