<div class='container-fluid cards-row'>
  <div class='row'>
    <% @authors.each do |author| %>
      <div class='col-sm-6 col-md-4 article'>
        <div class='thumbnail' style='outline-style: solid; outline-radius: 7px; background-color: #ddaa68e6;'>
          <div class='row'>
            <div class='col-md-12' style="margin-bottom: 5px">
              <%= image_tag author.image_url, class: "img-responsive" if author.image_url %>
            </div>
          </div>
          <div class='caption'>
            <h3>Author Name:  <td><%= link_to author.name, user_author_path(author.id) %></td></h3>
            <p class='card-description'>
              <strong>Author:  <%= author.biography[0..15] + '...' %></strong><br>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% unless @authors.empty? %>
        <%= paginate @authors, outer_window: 3, class: "pagination" %>
      <% end %>
    </div>
  </div>
</div>

