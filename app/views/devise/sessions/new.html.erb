<div class='container devise-container'>
  <div class='row'>
    <div class='col-md-3'>
    </div>
    <div class='col-md-6 devise-form-1'>
      <h3>Log in</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class='field'>
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Your Email *' %>
        </div>
        <div class='field'>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: 'Your Password *' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div style='margin-top: 11px'>
          <%= f.submit 'Log in', class: 'form-control', class: 'btnSubmit' %>
        </div>
      <% end %>
      <%= render 'devise/shared/links', class: 'form-group', class: 'btnForgetPwd' %>
      </form>
    </div>
  </div>
  <div class='col-md-3'>
  </div>
</div>


