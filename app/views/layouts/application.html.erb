<!DOCTYPE html>
<html>
<head>
  <title>LibraryService</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<nav class="navbar navbar-inverse navbar-fixed-top float-right">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to ' Library ', root_path, class: 'navbar-brand' %>
      <% if user_signed_in? && current_user.admin %>
        <%= link_to ' Admin panel ', rails_admin_path, class: 'navbar-brand' %>
      <% end %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to ' LogOut ', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %></li>
      <% else %>
        <li><%= link_to ' Login ', new_user_session_path, class: 'glyphicon glyphicon-log-in' %></li>
        <li><%= link_to ' SignUp ', new_user_registration_path, class: 'glyphicon glyphicon-user' %></li>
      <% end %>
    </ul>
  </div>
</nav>
<body>
<%= yield %>
</body>
</html>
