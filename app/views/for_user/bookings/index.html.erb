<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 text-right col-md-offset-3'>
            <div style='text-align: center'>
              <strong>Your all bookings</strong>
            </div>
          </div>
        </div>
      </div>
      <div class='panel-body table-responsive'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
            <tr>
              <th class='hidden-xs'>ID</th>
              <th class='hidden-xs'>Copy ID</th>
              <th>Start Booking</th>
              <th>End Booking</th>
              <th>Status</th>
              <th>User Name</th>
              <th>Book Name</th>
              <th>Author book</th>
            </tr>
          </thead>
          <tbody>
            <% @bookings.each do |booking| %>
              <tr>
                <% if @books_booking[booking] %>
                  <td><%= link_to booking.id, for_user_book_path(@books_booking[booking]) %></td>
                  <td><%= link_to booking.unit_id, for_user_book_path(@books_booking[booking]) %></td>
                  <td><%= link_to booking.start_booking, for_user_book_path(@books_booking[booking]) %></td>
                  <td><%= link_to booking.end_booking, for_user_book_path(@books_booking[booking]) %></td>
                  <td><%= link_to booking.status, for_user_book_path(@books_booking[booking]) %></td>

                <% else %>
                  <td><%= booking.id %></td>
                  <td><%= booking.unit_id %></td>
                  <td><%= booking.start_booking %></td>
                  <td><%= booking.end_booking %></td>
                  <td><%= booking.status %></td>
                <% end %>
                <td><%= booking.user.username %></td>
                <td><%= booking.book_title %></td>
                <td><%= booking.author_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <% unless @bookings.empty? %>
              <%= paginate @bookings, outer_window: 3, class: "pagination" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>