<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 text-right col-md-offset-3'>
            <div style='text-align: center'>
              <strong>
                Books that you take
              </strong>
            </div>
          </div>
        </div>
      </div>
      <div class='panel-body'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
            <tr>
<!--              <th>Title</th>-->
<!--              <th>Year of release</th>-->
<!--              <th>Catecory</th>-->
<!--              <th>Author</th>-->
<!--              <th>Description</th>-->
<!--              <th>Start oreder this book:</th>-->
<!--              <th>End oreder this book:</th>-->
<!--              <th>before the end of the order days:</th>-->
              <th>Назва</th>
              <th>Рік випуску</th>
              <th>Категорія</th>
              <th>Автор</th>
              <th>Опис</th>
              <th>Початок замовлення цієї книги:</th>
              <th>Кінець замовлення цієї книги:</th>
              <th>До кінця замовлення залишилося:</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>

                <td><%= link_to book.title, for_user_book_path(book.id) %></td>
                <td><%= link_to book.year, for_user_book_path(book.id) %></td>
                <% unless book.category.nil? || book.category.title.nil? %>
                  <td><%= link_to book.category.title, for_user_book_path(book.id) %></td>
                <% else %>
<!--                  <td>Category: not exist</td><br>-->
                  <td>Категорії: не існує</td><br>
                <% end %>
                <% unless book.author.nil? || book.author.name.nil? %>
                  <td><%= link_to book.author.name, for_user_book_path(book.id) %></td>
                <% else %>
<!--                  <td>Author: not exist</td><br>-->
                  <td>Автор: не існує</td><br>
                <% end %>
                <% if book.description.length < 30 %>
                  <td><%= link_to book.description, for_user_book_path(book.id) %></td>
                <% else %>
                  <td><%= link_to book.description[0..30] + '...', for_user_book_path(book.id) %></td>
                <% end %>
                <td><%= @books_booking[book].start_booking %></td>
                <td><%= @books_booking[book].end_booking %></td>
                <td><%= ((@books_booking[book].end_booking - DateTime.current) / 86400).to_i %> днів</td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <% unless @books.empty? %>
              <%= paginate @books, outer_window: 3, class: "pagination" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>