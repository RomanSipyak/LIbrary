<div class='row'>
  <div class='col-md-12 about ' style='background-color:#e0b575e0; border-radius: 7px; padding: 5px;border: solid; border-width: 3px;'>
    <div class='row about'>
      <div class='col-lg-6 col-md-6 col-sm-12 '>
        <div class="row">
          <div class="col-md-12">
            <img src="https://www.google.com.ua/url?sa=i&rct=j&q=&esrc=s&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwieqvf_ierdAhVLkSwKHUfLBFIQjRx6BAgBEAU&url=https%3A%2F%2Fwww.w3schools.com%2Fw3css%2Fw3css_images.asp&psig=AOvVaw2kmYJjdoZSUX-TdJw1fZyG&ust=1538647564869526" alt="No found image" class="responsive" width="600" height="400">
          </div>
        </div>
      </div>
      <div class='col-lg-6 col-md-6 col-sm-12 desc card'>
        <ul>
          <li>Title:<%= @book.title %></li>
          <li>Year of release:<%= @book.year %></li>
          <li>Author:<%= @book.author.name %></li>
          <li>Category:<%= @book.category.title %></li>
          <li>Language:<%= @book.language.language %></li>
          <li>Count of copies:<%= @book.units_count %></li>
          <li>Count of free:</li>
          <li>Count of ordes:</li>
        </ul>
      </div>
    </div>
    <div class="row" style="background-color: #fcaf58a6; border-radius: 7px; margin: 8px; padding: 5px; border: dashed; border-width: 7px;">
      <p style="word-break: break-all;"><%= @book.description %></p>
    </div>
  </div>
</div>
<!--ADD BIOGRAPHY CORRECT SHOW-->
<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row' style="margin-top: 10px;">
  <div class='col-md-12'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-md-6 col-md-offset-3'>
            <div style="text-align: center">
              <strong>
                Books that you read
              </strong>
            </div>
          </div>
        </div>
      </div>
      <div class='panel-body'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
          <tr>
            <th><em class='fa fa-cog'></em></th>
            <th class='hidden-xs'>ID</th>
            <th class='hidden-xs'>Available</th>
          </tr>
          </thead>
          <tbody>
          <% @units.each do |unit| %>
            <tr>
              <td align='center'>
                <%= link_to book_copy_path(id: unit.id,book_id: @book.id), method: :delete, data: {confirm: 'Are you sure?'}, class: ' btn btn-danger fa fa-minus-circle' do %>
                <% end %>
              </td>
              <td><%= unit.id %></td>
              <td><%= unit.available %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>