<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class="container-fluid cards-row">
    <div class="row">
      <% @books.each  do |book| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail" style="outline-style: solid; outline-radius: 7px; background-color: #ddaa68e6;">
          <img src="https://1.bp.blogspot.com/-aFQ-W_KTFWQ/V6BdtpSUy6I/AAAAAAAAAH4/xD_U-BYItSsNvk1UGfROqLBzzU1h32oXQCLcB/s320/4-diwali-greeting-cards-by-ajay-acharya.jpg" alt="Bootstrap Thumbnail: Beautiful Bootstrap Thumbnail like Material Design Cards">
          <div class="caption" style="border-radius: 7px;background-color: #28a745;">
            <h3>Tile Of Book: <%= book.title  %></h3>
            <p class="card-description">
              <strong>Author:  <%= book.author.name %></strong><br>
              <strong>Count of Free:</strong> 2\<%= book.units_count  %></p>
              <%= link_to   bookings_path,  class: 'btn btn-success fa fa-check fa-1' do %>
                Do order
              <% end %>


          </div>
        </div>
      </div>
       <% end %>
    </div>
</div>

