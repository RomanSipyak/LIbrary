<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
    <div class='panel panel-default panel-table'>
      <div class='panel-heading'>
        <div class='row'>
          <div class='col col-xs-6'>
          </div>
          <div class='col col-xs-6 text-right'>
            <%= link_to 'Create author', new_author_path, class: 'btn btn-sm btn-primary' %>
          </div>
        </div>
      </div>
      <div class='panel-body'>
        <table class='table table-striped table-bordered table-list'>
          <thead>
          <tr>
            <h4><%= @status %></h4>
          </tr>
          <tr>
            <th><em class='fa fa-cog'></em></th>
            <th class='hidden-xs'>ID</th>
            <th>Name</th>
            <th>Biography</th>
          </tr>
          </thead>
          <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td align='center'>
                <%= link_to new_author_path(author_id: author.id), class: ' btn btn-default fa fa-pencil' do %>

                <% end %>
                <%= link_to author_path(author), method: :delete, data: {confirm: 'Are you sure?'}, class: ' btn btn-danger fa fa-trash' do %>

                <% end %>
              </td>
              <td class='hidden-xs'><%= author.id %></td>
              <td><%= link_to author.name, author_path(author.id) %></td>
              <td><%= author.biography[0..30] + '...' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
