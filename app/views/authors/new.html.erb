<div class='row'>
  <div class='col-md-3'>
  </div>
  <div class='col-md-6'>
    <% if @author.errors.any? %>
      <div class='error_explanation'>
        <h4><%= pluralize(@author.errors.count, 'error') %></h4>
        <ul>
          <% @author.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h4><%= @status %></h4>
    <%= form_for @author do |f| %>
      <div class='form-group'>
        <label for='usr'>Author name</label>
        <%= f.text_field :name, class: 'form-control' %><br>
        <label for='usr'>Author biography</label>
        <%= f.text_area :biography, class: 'form-control' %><br>
        <%= f.hidden_field :image, value: @author.cached_image_data %>
        <%= f.file_field :image %>
      </div>
      <%= f.submit 'Save', class: 'form-control' %>
    <% end %>
  </div>
  <div class='col-md-3'>
  </div>
</div>